<configuration>
    <property>
        <name>yarn.acl.enable</name>
        <value>false</value>
    </property>

    <property>
        <name>yarn.log-aggregation-enable</name>
        <value>true</value>
    </property>

    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>

    <property>
        <name>yarn.nodemanager.local-dirs</name>
        <value>{{ user_directory }}/nodemanager-data</value>
    </property>

    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>{{ user_directory }}/nodemanager-logs</value>
    </property>
</configuration>